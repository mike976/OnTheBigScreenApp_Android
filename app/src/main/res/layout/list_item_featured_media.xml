<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="20dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featuredMediaRecyclerView"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/featuredHeaderButton"/>

    <Button
        android:padding="8dp"
        android:id="@+id/featuredHeaderButton"
        android:layout_width="@dimen/featured_header_button_height"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:contentDescription="@string/featured_header_button_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorAccent"
        android:text="tap to view all"
        android:textSize="@dimen/featured_header_button_textsize"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>